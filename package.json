{
  "name": "extensions",
  "private": true,
  "description": "Extensions monorepo",
  "workspaces": [
    "host/*",
    "fragment/*",
    "core/*",
    "ui-components"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:release": "lerna run build:release",
    "build:local": "lerna run build:local",
    "build:source": "lerna run build:source",
    "build:beta": "lerna run build:beta",
    "test": "lerna run test",
    "test:end-to-end": "lerna run test:end-to-end",
    "lint": "lerna run lint",
    "sentry:version": "sentry-cli releases new \"999898\" --project adblock-plus",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org eyeo --project adblock-plus ./host/adblockplus/dist/release && sentry-cli sourcemaps upload --org eyeo --project adblock-plus ./host/adblockplus/dist/release"
  },
  "dependencies": {
    "@sentry/cli": "2.37.0"
  },
  "devDependencies": {
    "lerna": "8.1.8"
  }
}