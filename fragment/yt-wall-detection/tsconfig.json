{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
}
