{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "outFile": "./dist/index.d.ts",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@eyeo-fragments/public-api": ["./src/background/index.js"]
    }
  },
  "include": ["src/background/index.js"],
  "exclude": ["node_modules", "src/content/*.js", "src/shared/*.js"]
}
