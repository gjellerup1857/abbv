{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "src/.eslintrc.js"
  ]
}
